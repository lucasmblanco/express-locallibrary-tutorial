<%- include("layout.ejs") %>

<h1><%= title %> </h1>
<form method="POST" action="">
    <div class="form-group">
        <label for="first-name">First Name:</label>
        <input type="text" id="first_name" class="form-control" placeholder="First Name" name="first_name" required="true" value="<%=  author  ? author.first_name : '' %>">
        <label for="family-name">Family Name:</label>
        <input type="text" id="family_name" class="form-control" placeholder="Family Name" name="family_name" required="true" value="<%=  author  ? author.family_name : '' %>">
    </div>
    <div class="form-group">
        <label for="date_of_birth">Date of birth: </label>
        <input type="date" id="date_of_birth" class="form-control" name="date_of_birth" value="<%=  author ? author.date_of_birth_isotostring : '' %>">
        <label for="date_of_death">Date of death: </label>
        <input type="date" id="date_of_death" class="form-control" name="date_of_death" value="<%=  author ? author.date_of_death_isotostring : '' %>">
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>
<% if(errors.length > 0) { %>
    <ul>
        <% errors.forEach(error => { %> 
            <li><%= error.msg%></li>
        <% }) %>
    </ul>
<% } %>