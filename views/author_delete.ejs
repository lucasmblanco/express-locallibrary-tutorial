<%- include("layout.ejs") %> 

<h1><%= title %></h1>

<p><%= author.lifespan %></p>
<% if(author_books.length > 0) {%>
    <p><strong>Delete the following books before attempting to delete this author.</strong></p>
    <div style="margin-left:20px;margin-top:20px">
        <h4>Books</h4>
        <dl>
            <% for(const book of author_books) { %>
                <dt>
                    <a href="<%= book.url %>"><%= book.title %></a>
                    <dd><%= book.summary %></dd>
                </dt>
            <% } %>
        </dl>
    </div>
<% } else { %>
    <p>Do you really want to delete this Author?</p>
    <form method="POST" action="">
        <div class="form-group">
            <input type="hidden" name="authorid" required="true" value="<%= author._id %>" id="authorid" class="form-control">
            <button class="btn btn-primary" type="submit">Delete</button>
        </div>
    </form>
    <% } %>