<%- include("layout.ejs") %>

<div>
  <h1><%= title %></h1>
<ul>
  <% if(bookinstance_list.length > 0) { %> <%
  bookinstance_list.forEach(bookInstance => { %>
  <li>
    <a href="<%= bookInstance.url %>"><%= bookInstance.book.title %> : <%=bookInstance.imprint %> </a>
    
    <% if(bookInstance.status === "Available") { %>
    <span class="text-success"><%= bookInstance.status %></span>
    <% } else if(bookInstance.status === "Maintenance") {%>
    <span class="text-danger"><%= bookInstance.status %></span>
    <% } else { %>
    <span class="text-warning"><%= bookInstance.status %></span>
    <% } %> <% if(bookInstance.status !== "Available") { %>
    <span>(Due: <%= bookInstance.due_date_formatted %>)</span>
    <% } %>
  </li>
  <% }) %> <% } else {%>
  <li>There are no book copies in this library.</li>
  <% } %>
</ul>
</div>