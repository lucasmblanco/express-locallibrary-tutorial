<%- include("layout.ejs") %>
<h1><%= title %></h1>
<h4><%= genre.name %></h4>
<% if(genre_books.length > 0) { %>
<p>
<p><strong>Delete the following books before attempting to delete this genre.</strong></p>
</p>
<div style="margin-left:20px;margin-top:20px">
  <h5><strong>Books</strong></h5>
  <dl>
    <% for(const book of genre_books) { %>
        <dt>
            <a href="<%= book.url %>"><%= book.title %></a>
        </dt>
      <% } %>
  </dl>
</div>
<% } else { %>
    <p>Do you really want to delete this Genre?</p>
<form method="POST" action="">
  <div class="form-group">
    <input type="hidden" name="genreid" required="true" value="<%= genre._id %>" id="genreid" class="form-control">
    <button class="btn btn-primary" type="submit">Delete</button>
  </div>
</form>
<% } %>